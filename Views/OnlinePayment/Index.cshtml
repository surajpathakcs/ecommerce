<div class="container mt-5">
    <!-- Thank You Message -->
    <div class="text-center mb-5">
        <div class="d-inline-flex align-items-center justify-content-center rounded-circle shadow-sm" style="width: 70px; height: 70px; background-color: var(--coffee-light);">
            <span class="bi bi-check2" style="font-size: 2rem; color: var(--coffee-dark);"></span>
        </div>
        <h2 class="mt-4 fw-light" style="color: var(--coffee-dark);">Thank You for Your Purchase!</h2>
        <p style="color: var(--text-dark);">Your order has been placed successfully.</p>
    </div>

    <div class="row justify-content-center">
        <!-- Order Information -->
        <div class="col-md-10">
            <div class="card border-0 shadow-sm rounded-3 mb-4" style="background-color: var(--background);">
                <div class="card-body p-4">
                    <h4 class="mb-4 fw-light" style="color: var(--coffee-dark);">Order Summary</h4>

                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <input type="hidden" class="ProductOrderMID" value="@Model.mast.ProductOrderMasterID" />

                            <div class="mb-3">
                                <label class="small" style="color: var(--coffee-medium);">Name</label>
                                <p class="fullName mb-0">@Model.mast.Fullname</p>
                            </div>

                            <div class="mb-3">
                                <label class="small" style="color: var(--coffee-medium);">Mobile</label>
                                <p class="mobileNo mb-0">@Model.mast.MobileNo</p>
                            </div>

                            <div class="mb-3">
                                <label class="small" style="color: var(--coffee-medium);">Email</label>
                                <p class="email mb-0">@Model.mast.Email</p>
                            </div>
                        </div>

                        <div class="col-md-6 mb-4">
                            <div class="mb-3">
                                <label class="small" style="color: var(--coffee-medium);">Payment Status</label>
                                <p class="status mb-0">@Model.mast.PaymentStatus</p>
                            </div>

                            <div class="mb-3">
                                <label class="small" style="color: var(--coffee-medium);">Address</label>
                                <p class="mb-0">@Model.mast.Address</p>
                            </div>

                            <div class="mb-3">
                                <label class="small" style="color: var(--coffee-medium);">Order Date</label>
                                <p class="date mb-0">@Model.mast.OrderDate</p>
                            </div>
                        </div>
                    </div>

                    <hr style="border-color: var(--coffee-light); opacity: 0.3;">

                    <div class="d-flex justify-content-end mt-3">
                        <div>
                            <label class="small" style="color: var(--coffee-medium);">Grand Total</label>
                            <p class="h4 grandTotal mb-0" style="color: var(--coffee-dark);" data-amount="@Model.mast.GrandTotal">
                                Rs. @Model.mast.GrandTotal
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Order Details -->
            <div class="card border-0 shadow-sm rounded-3 mb-4" style="background-color: var(--background);">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h4 class="fw-light" style="color: var(--coffee-dark);">Order Details</h4>
                        <button class="btn btn-sm btnKhalti text-white" style="background-color: var(--coffee-medium);">
                            Pay with Khalti
                        </button>
                    </div>

                    <div class="table-responsive">
                        <table class="table" style="color: var(--text-dark);">
                            <thead>
                                <tr>
                                    <th scope="col" style="color: var(--coffee-medium); border-bottom: 2px solid var(--coffee-light);">ID</th>
                                    <th scope="col" style="color: var(--coffee-medium); border-bottom: 2px solid var(--coffee-light);">Product</th>
                                    <th scope="col" style="color: var(--coffee-medium); border-bottom: 2px solid var(--coffee-light);">Price</th>
                                    <th scope="col" style="color: var(--coffee-medium); border-bottom: 2px solid var(--coffee-light);">Qty</th>
                                    <th scope="col" style="color: var(--coffee-medium); border-bottom: 2px solid var(--coffee-light);">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.dtl)
                                {
                                    <tr>
                                        <td>@item.ProductOrderDetailID</td>
                                        <td>@item.ProductName</td>
                                        <td>Rs. @item.UnitPrice</td>
                                        <td>@item.Quantity</td>
                                        <td style="color: var(--coffee-dark); font-weight: 500;">Rs. @item.TotalPrice</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="mt-4 p-3 rounded" style="background-color: var(--coffee-light); opacity: 0.2;">
                        <p class="mb-0 small" style="color: var(--coffee-dark);">
                            <i class="fa fa-info-circle me-2"></i>
                            Thank you for shopping with us. You'll receive a confirmation email shortly.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>