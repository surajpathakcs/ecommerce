<div class="container mt-5">
    <!-- Thank You Message -->
    <div class="text-center mb-4">
        <div class="d-inline-flex align-items-center justify-content-center rounded-circle bg-white shadow-sm" style="width: 60px; height: 60px;">
            @* <i class="fa fa-check text-success" style="font-size: 40px;"> </i> *@
            <span class="bi bi-check2 text-success fs-2"></span>
        </div>
        <h2 class="mt-3 fw-bold">Thank You for Your Purchase!</h2>
        <p class="text-muted">Your order has been placed successfully.</p>
    </div>

    <div class="row">
        <!-- Left Side: Order Summary and Details (Stacked) -->
        <div class="col-md-8">
            <!-- Order Summary -->
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h4 class="card-title text-primary">Order Summary</h4>
                    <table class="table">
                        <tbody>
                            <tr><td><strong>Fullname:</strong></td><td>@Model.mast.Fullname</td></tr>
                            <tr><td><strong>Mobile No:</strong></td><td>@Model.mast.MobileNo</td></tr>
                            <tr><td><strong>Email:</strong></td><td>@Model.mast.Email</td></tr>
                            <tr><td><strong>Address:</strong></td><td>@Model.mast.Address</td></tr>
                            <tr>
                                <td><strong>Grand Total:</strong></td>
                                <td class="text-success grandTotal fw-bold" data-amount="@Model.mast.GrandTotal">
                                    Rs. @Model.mast.GrandTotal
                                </td>
                            </tr>

                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Order Details -->
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h4 class="card-title text-primary">Order Details</h4>
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered">
                            <thead class="table-dark">
                                <tr>
                                    <th>Order ID</th>
                                    <th>Product Item ID</th>
                                    <th>Product Name</th>
                                    <th>Unit Price</th>
                                    <th>Quantity</th>
                                    <th>Total Price</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.dtl)
                                {
                                    <tr>
                                        <td>@item.ProductOrderDetailID</td>
                                        <td>@item.ProductItemId</td>
                                        <td>@item.ProductName</td>
                                        <td>Rs. @item.UnitPrice</td>
                                        <td>@item.Quantity</td>
                                        <td class="text-success fw-bold">Rs. @item.TotalPrice</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Side: Khalti Payment -->
        <div class="col-md-4">
            <div class="card shadow-sm">
                @* <div class="card-body">
                <h4 class="card-title text-primary">Payment Options</h4>
                <p>Complete your purchase by paying with Khalti.</p>
                *@
                <button class="btn btn-primary btnKhalti">
                    Pay with Khalti
                </button>
                @*
                <div class="mt-3 p-3 bg-light rounded">
                <p class="mb-1 small"><i class="fa fa-lock me-2"></i>Secure payment via Khalti</p>
                <p class="mb-0 small text-muted">Your payment information is processed securely.</p>
                </div>

                <div class="mt-4">
                <h5>Order Summary</h5>
                <div class="d-flex justify-content-between mb-2">
                <span>Subtotal:</span>
                <span>Rs. @Model.mast.GrandTotal</span>
                </div>
                <div class="d-flex justify-content-between mb-2">
                <span>Shipping:</span>
                <span>Rs. 0.00</span>
                </div>
                <hr>
                <div class="d-flex justify-content-between fw-bold">
                <span>Total:</span>
                <span class="text-success">Rs. @Model.mast.GrandTotal</span>
                </div>
                </div>
                </div>
                </div> *@
            </div>
        </div>
    </div>
