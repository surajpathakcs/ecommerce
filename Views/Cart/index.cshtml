@model ecom.Models.ViewModel.DashboardVM

<div class="container mt-4">
    <div class="row">
        <!-- Left Side: Cart Items -->
        <div class="col-md-8">
            <div class="d-flex justify-content-between">
                <button type="button" class="btn btn-danger btnClearCart">
                    <i class="fas fa-trash"></i> Clear Cart
                </button>
                <button type="button" class="btn btn-success btnCheckoutCart" data-bs-toggle="modal" data-bs-target="#btnCheckoutCart">
                    <i class="fas fa-credit-card"></i> Proceed to Checkout
                </button>
            </div>

            <div class="card mt-3 shadow-sm border-0">
                <div class="card-header bg-success text-white">
                    <h5 class="fw-bold mb-0">Shopping Cart</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover table-striped">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Price</th>
                                    <th>Qty</th>
                                    <th>Total</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody class="body-item">
                                <!-- Cart items will be dynamically loaded here -->
                            </tbody>
                        </table>
                    </div>

                    <div class="row justify-content-end mt-4">
                        <div class="col-6 col-md-5">
                            <div class="d-flex justify-content-between align-items-center p-3 bg-light rounded shadow-sm">
                                <span class="h5 mb-0">Grand Total:</span>
                                <span class="h4 mb-0 text-success tdGrandTotal"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Checkout Payment Modal -->
<div class="modal fade" id="btnCheckoutCart" tabindex="-1" aria-labelledby="checkoutModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title" id="checkoutModalLabel">Complete Your Order</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row mb-3">
                    <div class="col-md-3">
                        Fullname
                    </div>
                    <div class="col-md-9">
                        <input type="text" class="form-control txtCartFullname" />
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-3">
                        Mobile No
                    </div>
                    <div class="col-md-9">
                        <input type="text" class="form-control txtCartMobileNo" />
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-3">
                        Email
                    </div>
                    <div class="col-md-9">
                        <input type="text" class="form-control txtCartEmail" />
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-3">
                        Address
                    </div>
                    <div class="col-md-9">
                        <input type="text" class="form-control txtCartAddress" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary txtCartSubmit">SUBMIT</button>
                </div>
            </div>
        </div>
    </div>
</div>