@model IEnumerable<ecom.Models.Category>

<div class="container mt-4">
    <div class="row">
        <!-- Category List -->
        <div class="col-md-8">
            <div class="card border-0 shadow-sm rounded-3" style="background-color: var(--background);">
                <div class="card-header border-0 py-3" style="background-color: var(--coffee-dark); border-radius: 0.5rem 0.5rem 0 0;">
                    <h4 class="text-white mb-0 fw-light">Categories</h4>
                </div>
                <div class="card-body p-4">
                    <div class="table-responsive">
                        <table class="table" style="color: var(--text-dark);">
                            <thead>
                                <tr>
                                    <th style="color: var(--coffee-medium); border-bottom: 2px solid var(--coffee-light);">SN</th>
                                    <th style="color: var(--coffee-medium); border-bottom: 2px solid var(--coffee-light);">Category Name</th>
                                    <th style="color: var(--coffee-medium); border-bottom: 2px solid var(--coffee-light);">Category Code</th>
                                    <th style="color: var(--coffee-medium); border-bottom: 2px solid var(--coffee-light);">Created Date</th>
                                    <th style="color: var(--coffee-medium); border-bottom: 2px solid var(--coffee-light);">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- No foreach here, data will be loaded using JavaScript -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Category Form -->
        <div class="col-md-4">
            <div class="card border-0 shadow-sm rounded-3" style="background-color: var(--background);">
                <div class="card-header border-0 py-3" style="background-color: var(--coffee-dark); border-radius: 0.5rem 0.5rem 0 0;">
                    <h4 class="text-white mb-0 fw-light">Category Details</h4>
                </div>
                <div class="card-body p-4">
                    <div class="form-group">
                        <div class="mb-3">
                            <label for="CategoryName" class="form-label" style="color: var(--coffee-medium);">Name</label>
                            <input type="text" class="form-control txtName" id="CategoryName" placeholder="Enter Category Name"
                                   style="border: 1px solid var(--coffee-light); background-color: var(--background);">
                        </div>
                        <div class="mb-3">
                            <label for="CategoryCode" class="form-label" style="color: var(--coffee-medium);">Code</label>
                            <input type="text" class="form-control txtCode" id="CategoryCode" placeholder="Enter Category Code"
                                   style="border: 1px solid var(--coffee-light); background-color: var(--background);">
                        </div>
                        <div class="mt-4">
                            <input type="hidden" class="hdnId" />
                            <button type="submit" class="btn text-white btnSave" style="background-color: var(--coffee-medium);">Save</button>
                            <button type="button" class="btn text-white btnCancel" style="background-color: var(--coffee-dark);">Cancel</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        /*$(document).on("click", ".btnSave", function () {
            alert("Hii There");
        });*/

        $(document).ready(function () {
            loadTable(); // Fetch data when the page loads
        });


        function loadTable() {
             $.ajax({
                    method: 'GET',
                    url: '/Category/GetCategories', // Fetch data from controller
                    success: function (res) {
                        var tableBody = $("table tbody");
                        tableBody.empty(); // Clear existing rows

                        $.each(res.data, function (index, category) {
                            var row = `<tr>
                            <td>${index + 1}</td>
                            <td>${category.categoryName}</td>
                            <td>${category.categoryCode}</td>
                            <td>${category.createdAt}</td>
                            <td>
                                <button class="btn btn-warning btnEdit" data-key="${category.categoryId}">Edit</button>
                                <button class="btn btn-danger btnDlt" data-key="${category.categoryId}">Delete</button>
                            </td>
                        </tr>`;

                            tableBody.append(row);
                        });
                    },
                    error: function () {
                        alert("Failed to load data!");
                    }
                });








        function clearForm(){
            $(".txtName").val("");
            $(".txtCode").val("");
            $(".hdnId").val("");
        }
        /*Edit button */
        $(document).on("click", ".btnEdit", function () {
            
            var id = $(this).data('key');

            $.ajax({
                method: 'get',
                contentType: "application/json; charset=utf-8",
                url: '@Url.Action("Edit", "Category")?id=' + id,
                success: function (res) {
                    if(res.success == false){
                        alert(res.message)
                    }
                    else{
                        $(".txtName").val(res.data.categoryName);
                        $(".txtCode").val(res.data.categoryCode);
                        $(".hdnId").val(res.data.categoryId);

                    }
                },
                error: function (res) {
                    alert(res.message);
                }
            });

        });


        //delete ajax
        $(document).on("click", ".btnDlt", function () {
            var id = $(this).data('key');

            $.ajax({
                method:'get',
                contentType:"application/json; charset=utf8",
                url:"@Url.Action("Delete","Category")?id="+id,
                success: function(res){
                    loadTable();
                    alert(res.message);
                },
                error:function(res){
                    alert(res.message);
                }
            })
        })















        $(document).on("click", ".btnCancel", function () {
            var ok = confirm("Are you sure you want to cancel");
            if (ok) {
                $(".txtName").val("");
                $(".txtCode").val("");
                alert("Cancelled");

            }
            else {
                alert("Not Cancelled");
            }
        })

        $(document).on("click", ".btnSave", function () {
            var name = encodeURIComponent($(".txtName").val()); // Encode special characters
            var code = encodeURIComponent($(".txtCode").val());
            var hiddenId = $(".hdnId").val();

            

            if (name == "" || code == "") {
                alert("Please fill all the fields");
            }
            else {
                $.ajax({
                    method: 'get',
                    url: '@Url.Action("Save", "Category")?hiddenId='+hiddenId+'&CategoryName=' + name + '&CategoryCode=' + code,
                    contentType: "application/json; charset=utf-8",
                    success: function (response) {
                        success = response.success;
                        if (success == true) {
                            loadTable();
                            clearForm();
                        }
                        alert(response.message);
                    },
                    error: function (response) {
                        alert(response.message);
                    }
                });
            }


            

        })


        }

    </script>
}